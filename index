    <title>Cyber Security Quiz Game</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100vh;
            margin: 0;
            background-color: #2c3e50;
            color: #ecf0f1;
        }
        #gameContainer {
            text-align: center;
            width: 80%;
            max-width: 600px;
        }
        h1 {
            color: #e74c3c;
        }
        .question, .result {
            font-size: 1.5rem;
            margin: 20px 0;
            opacity: 0;
            transform: translateY(-20px);
            transition: all 0.5s;
        }
        .visible {
            opacity: 1;
            transform: translateY(0);
        }
        .options button {
            padding: 10px 20px;
            margin: 5px;
            border: none;
            border-radius: 5px;
            font-size: 1rem;
            cursor: pointer;
            transition: background 0.3s;
        }
        .options button:hover {
            background-color: #3498db;
        }
        .correct {
            background-color: #2ecc71;
            color: white;
        }
        .incorrect {
            background-color: #e74c3c;
            color: white;
        }
        .score {
            font-size: 1.2rem;
            margin: 10px 0;
        }
    </style>
